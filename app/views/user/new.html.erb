<h1>Create a new user</h1>

<%= form_for @user, url: {action: "create"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br/>

  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br/>
  <%= f.submit "Add New user" %>
<% end %>